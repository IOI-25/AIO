#usr/bin/env python3

root = "/home/makk/projects/AIO/app/"

import shutil
import multiprocessing
import colorama
import os

shared_free_space = multiprocessing.Value('i', 0)

lock = multiprocessing.Lock()

def css(shared_free_space):
    print("Checking storage space")
    total, used, free = shutil.disk_usage("/")
    free_mb = free / ((1024 * 1024) * 1000)
    return int(free_mb)

def install():
    print(colorama.Fore.GREEN + "Installing")
    os.
    
    

if __name__ == "__main__":
    colorama.init(autoreset=True)
    free_space = css(shared_free_space)
    print(f"Free space: {free_space} GB")
    if free_space < 10:
        print(colorama.Fore.RED + "Not enough space")
    else:
        install()